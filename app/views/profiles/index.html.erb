<div class="page-wrapper">
  <div class="splash">

    <p id="notice"><%= notice %></p>

    <h1>Profiles</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Preferred Region</th>
          <th>Preferred Platform</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @profiles.each do |profile| %>
          <tr>
            <% if profile.name.present? %>
              <td><%= link_to profile.name, profile %></td>
              <% else %>
                <td><%= link_to profile.user.email, profile %></td>
              <% end %>
            <td><%= profile.region.region %></td>
            <td><%= profile.platform.platform %></td>
            <% if profile.user == current_user %>
              <td><%= link_to 'Edit', edit_profile_path(profile), :class => "btn btn-default" %></td>
              <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>
</div>
