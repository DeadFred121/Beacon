<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :profile_name %>
  </div>

  <div class="field">
    <%= form.label :avatar %>
    <%= form.file_field :avatar, id: :profile_avatar %>
  </div>

  <div class="field">
    <%= form.label :region_id %>
    <%= form.select :region_id, options_for_select(@regions), { prompt: "Please choose your region"}%>
  </div>

  <div class="field">
    <%= form.label :platform_id %>
    <%= form.select :platform_id, options_for_select(@platforms), { prompt: "Please choose your platform"}%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
