<p id="notice"><%= notice %></p>

<h1>Flares</h1>
<br>
<br>
<%= render 'shared/search_form', regions: @regions, platforms: @platforms %>

<% if @flares.any? %>

  <table>
    <thead>
      <tr>
        <th>Region</th>
        <th>Platform</th>
        <th>Game</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @flares.each do |flare| %>
        <tr>
          <td><%= flare.region.region %></td>
          <td><%= flare.platform.platform %></td>
          <td><%= flare.game %></td>
          <td><%= flare.description %></td>
          <td><%= link_to 'Show', flare %></td>
          <td><%= link_to 'Edit', edit_flare_path(flare) %></td>
          <td><%= link_to 'Destroy', flare, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% if @flares.blank? %>
  <h3>There were no flares matching your query! Please try again!</h3>
<% end %>

<br>

<%= link_to 'New Flare', new_flare_path %>
